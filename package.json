{
  "name": "@giotramu/logo",
  "version": "2.3.1",
  "description": "Web Component version of personal logo and related resources.",
  "license": "MIT",
  "author": "giotramu <https://github.com/giotramu>",
  "homepage": "https://github.com/giotramu/logo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giotramu/logo.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/logo/issues"
  },
  "engines": {
    "node": "16.x || 18.x",
    "npm": "8.x || 9.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/webc/esm/webc.js",
  "types": "lib/webc/types/index.d.ts",
  "files": [
    "/lib/"
  ],
  "prettier": "@detra-lab/prettier-config",
  "scripts": {
    "check:tsc": "tsc --noEmit",
    "check:css": "stylelint ./src/**/*.css",
    "check:src": "eslint . --ext .js,.jsx,.ts,.tsx",
    "check": "run-p -cln check:*",
    "test": "stencil test --spec --coverage",
    "dev": "stencil build --dev --watch --serve",
    "clean": "del ./coverage ./lib/webc ./lib/loader ./www",
    "prebuild": "npm run clean",
    "build": "stencil build"
  },
  "devDependencies": {
    "@detra-lab/eslint-config": "^0.1.0",
    "@detra-lab/prettier-config": "^0.1.0",
    "@detra-lab/stylelint-config": "^0.1.0",
    "@detra-lab/tsc": "^0.1.0",
    "@evilmartians/lefthook": "^1.3.0",
    "@types/jest": "^27.5.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.39.0",
    "jest": "^27.5.0",
    "jest-cli": "^27.5.0",
    "npm-run-all": "^4.1.0",
    "prettier": "^2.8.0",
    "stylelint": "^15.6.0"
  },
  "dependencies": {
    "@stencil/core": "3.3.1"
  },
  "keywords": [
    "custom-elements",
    "logo",
    "stencil-components",
    "stenciljs",
    "web-components"
  ]
}
